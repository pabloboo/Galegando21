<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day21RecursosGalego.RecursosGalegoActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bannerFragment"
        android:name="com.galegando21.BannerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/music_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/musica_description"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@id/spotify_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerFragment" />

    <ImageView
        android:id="@+id/spotify_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/music_suxerencias_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_description_tv"
        app:srcCompat="@drawable/spotify_icon" />

    <TextView
        android:id="@+id/music_suxerencias_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/musica_suxerencias"
        android:textAlignment="center"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spotify_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>