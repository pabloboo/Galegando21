<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day03XogoPalabras.XogoPalabrasResultsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bannerFragment"
            android:name="com.galegando21.BannerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/xogo_palabras_correct_answers_results_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/honeycomb_icon"
            app:layout_constraintBottom_toTopOf="@+id/xogo_palabras_result_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bannerFragment" />

        <TextView
            android:id="@+id/xogo_palabras_correct_answers_results_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="75sp"
            app:layout_constraintBottom_toBottomOf="@+id/xogo_palabras_correct_answers_results_icon"
            app:layout_constraintEnd_toEndOf="@+id/xogo_palabras_correct_answers_results_icon"
            app:layout_constraintStart_toStartOf="@+id/xogo_palabras_correct_answers_results_icon"
            app:layout_constraintTop_toTopOf="@+id/xogo_palabras_correct_answers_results_icon"
            tools:text="67" />

        <TextView
            android:id="@+id/xogo_palabras_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/xogo_palabras_palabras_restantes_result_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xogo_palabras_correct_answers_results_icon"
            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            tools:text="Conseguiches o 67% da puntuación máxima." />

        <TextView
            android:id="@+id/xogo_palabras_palabras_restantes_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/xogo_palabras_finish_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xogo_palabras_result_tv"
            android:textAlignment="center"
            android:layout_marginHorizontal="15dp"
            tools:text="Faltaronche as seguintes palabras:" />

        <Button
            android:id="@+id/xogo_palabras_finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondaryBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xogo_palabras_palabras_restantes_result_tv"
            android:text="Finalizar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>