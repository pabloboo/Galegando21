<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/bannerFragmentStatistics"
            android:name="com.galegando21.BannerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:id="@+id/streaks_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="30dp"
            android:background="@drawable/card_background_statistics"
            app:layout_constraintTop_toBottomOf="@+id/bannerFragmentStatistics"
            app:layout_constraintBottom_toTopOf="@+id/day01_pasagalego_card">

            <!-- Title -->
            <TextView
                android:id="@+id/streaks_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RACHAS"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFFFFF"
                android:layout_below="@id/streaks_title"
                android:layout_marginTop="8dp" />

            <!-- Current Streak -->
            <LinearLayout
                android:id="@+id/current_streak_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_below="@id/divider">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/current_streak_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_fire_statistics"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/current_streak_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6"
                        android:textColor="@android:color/white"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/current_streak_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Racha actual"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Longest Streak -->
            <LinearLayout
                android:id="@+id/longest_streak_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/divider">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/longest_streak_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_star_statistics"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/longest_streak_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6"
                        android:textColor="@android:color/white"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/longest_streak_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Racha máis larga"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Divider between streaks -->
            <View
                android:id="@+id/vertical_divider"
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:background="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/divider" />
        </RelativeLayout>

        <!-- Pasagalego Card -->
        <LinearLayout
            android:id="@+id/day01_pasagalego_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_statistics"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/streaks_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/pasagalego_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day01_text"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/pasagalego_statistics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/correctGreen"
                    app:cardCornerRadius="90dp">

                    <TextView
                        android:id="@+id/correct_answers_pasagalego_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        tools:text="20" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/time_pasagalego_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="1:23" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/errorRed"
                    app:cardCornerRadius="90dp">

                    <TextView
                        android:id="@+id/error_answers_pasagalego_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        tools:text="3" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Onde están Card -->
